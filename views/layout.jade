mixin metablocks(url, title, description)
	meta(property="og:type", content="website")
	meta(property="og:url", content=url)
	meta(property="og:image", content="http://s.il.ly/img/social.png")
	meta(itemprop='image', content='http://s.il.ly/img/social.png')
	meta(property="og:title", content=title)
	meta(itemprop='name', content=title)
	meta(property="og:description", content=description)
	meta(itemprop='description', content=description)
	meta(name="description", content=description)
	meta(name="keywords", content="favicon, icon, touch icon, icons")
